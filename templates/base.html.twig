{# templates/base.html.twig #}
<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!--Link to CSS-->
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    
    <title>{% block title %}STS / Homepage{% endblock %}</title>
</head>
<body>
    <header class="sts-header bg-light">
        <h3 class="m-lg-3">Spiriit-Test-Symfony</h3>
        <nav class="navbar m-md-3">
            <ul class="nav">
                <li class="nav-item">
                    <a href="{{ path('homepage') }}" class="nav-link">Accueil</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('product_list') }}" class="nav-link">Produit</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('cart_index') }}" class="nav-link">Panier ({{ numberProductOnCart }})</a>
                </li>
            </ul>
        </nav>
    </header>
    <main>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% block content %}
            <p class="alert-warning">Bienvenue sur Spiriit-Test-Symfony (STS)</p>
        {% endblock %}
    </main>
    <footer class="footer">
        <p class="m-3">Romain MILLAN © 2022 - Tous droits réservés - <a href="#">Mentions légales</a></p>
    </footer>
</body>
</html>